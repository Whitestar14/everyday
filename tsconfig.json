{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",

    /* Language level */
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    /* Strictness & safety */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Emission */
    "noEmit": true,

    /* Interop & syntax */
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    /* Types for app + tests */
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@store/*": ["src/store/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"],
      "@context/*": ["src/context/*"],
      "@features/*": ["src/features/*"],
      "@api/*": ["src/api/*"],
      "@lib/*": ["src/lib/*"],
      "@tests/*": ["src/tests/*"],
      "@mocks/*": ["src/mocks/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  },

  /* Files included */
  "include": ["src", "vite.config.ts"],

  /* Exclusions */
  "exclude": ["dist", "android", "src/**/*.test.ts", "src/**/*.test.tsx", "src/__tests__"]
}
